{
  "rules": {
    "eqeqeq": [ 2, "always" ],
    "strict": [ 2, "safe" ],
    "no-unused-vars": [ 2, { "args": "all", "argsIgnorePattern": "^_" }],
    "prefer-const": [2],
    "no-var": [2],
    "indent": [2,2],
    "quotes": [2,"double", { "avoidEscape": true }],
    "linebreak-style": [2,"unix"],
    "semi": [2,"always"]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "env": {
    "es6": true,
    "node": true,
    "jasmine": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended"
  ]
}
